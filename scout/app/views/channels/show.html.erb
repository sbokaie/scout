<div class="container" id="results">
<%= @results %>
<% if params[:query] %>
  <div class="row">
    <div class="col-sm-4 col-md-4">
      <div class="thumbnail">
        <img data-src= <%= @user_img %>>
        <div class="caption">

          <h3><%= @username %></h3>
          <ul>
            <li>Total Views: <%= @view_count %></li>
            <li>Subscribers: <%= @subscriber_count %></li>
            <li>Total Videos: <%= @video_count %></li>
          </ul>
          <p><a href="" class="btn btn-default" role="button">View</a></p>
          <button data-item="<%= @username %>" class="btn btn-primary hold"> Hold </button>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div id="holdList" class="container">
  </div>
</div> 